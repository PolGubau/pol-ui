{
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "declaration": true,
    "outDir": "./dist",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@icons/*": ["./src/icons/*"],
      "@theme/*": ["./src/theme/*"],
      "@utils/*": ["./src/utils/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@helpers/*": ["./src/helpers/*"],
    }
  },
  "exclude": ["node_modules", "dist", "stories", "storybook-static"]
}
