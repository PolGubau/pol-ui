{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "types": ["@testing-library/jest-dom", "node", "vitest"]
  },
  "exclude": ["./build/", "./coverage/", "./lib/", "./.next/", "postcss.config.js", "./storybook-static/"],
  "include": [
    "**/*.js",
    "**/*.mdx",
    "**/*.mjs",
    "**/*.ts",
    "**/*.tsx",
    "postcss.config.js",
    "tailwind.config.ts",
    "src/a.sass"
  ]
}
