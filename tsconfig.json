{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "plugins": [
      {
        "name": "next",
      },
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "types": ["@testing-library/jest-dom", "node", "vitest"],
  },
  "exclude": ["./build/", "./lib/", "./.next/", "postcss.config.js"],
  "include": [
    ".next/types/**/*.ts",
    "**/*.js",
    "**/*.mdx",
    "**/*.mjs",
    "**/*.ts",
    "**/*.tsx",
    "postcss.config.js",
    "tailwind.config.js", "src/a.sass",
  ],
}
